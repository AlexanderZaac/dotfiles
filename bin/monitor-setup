#!/bin/bash

case $1 in
  manual) arandr &>/dev/null </dev/null &;;
  home) xrandr --dpi 96 --fb 3200x1080 --output HDMI2 --mode 1920x1080 --scale 1x1 --output eDP1 --mode 1280x720 --pos 1920x0 --scale 1x1;;
  laptop) xrandr --output HDMI1 --off --output HDMI2 --off --output eDP1 --mode 1920x1080 --scale 1x1;;
esac
