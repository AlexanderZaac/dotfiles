#!/bin/bash

REPO="${1}"

USER=$( echo ${REPO} | sed 's/\/.*$//' )
REPO=$( echo ${REPO} | sed 's/^.*\///' )

echo user=${USER}
echo repo=${REPO}

test -n ${USER} || exit 1
test -n ${REPO} || exit 2
mkdir -p ~/github/${USER} || exit 4
git clone git@github.com:${USER}/${REPO}.git ~/github/${USER}/${REPO}
