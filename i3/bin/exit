#!/bin/bash

before_exit() {
  # Unmount network (lazy)
  mount | grep cifs | awk '{ print $3 }' | while read dir; do sudo umount -l $dir; done
  mount | grep nfs  | awk '{ print $3 }' | while read dir; do sudo umount -l $dir; done

  # Kill gpg-agent
  killall gpg-agent
}

logout() {
  ~/.dotfiles/i3/bin/shutdown
  i3-msg exit
}

reboot() {
  ~/.dotfiles/i3/bin/shutdown
  systemctl reboot
}

poweroff() {
  ~/.dotfiles/i3/bin/shutdown
  systemctl poweroff
}

suspend() {
  systemctl suspend
}

case $1 in
  logout) logout;;
  reboot) reboot;;
  poweroff) poweroff;;
  suspend) suspend;;
esac
